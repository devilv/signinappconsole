<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textAlignment="center"
        android:hint="Age"
        android:textColorHint="#a0a0a1"
        android:ellipsize="start"
        android:textSize="25sp"
        android:background="#ffffff"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textColorHint="#a0a0a1"
        android:textAlignment="center"
        android:ellipsize="start"
        android:background="#ffffff"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText8"
        android:hint="password"
        android:layout_marginBottom="12dp"
        android:textSize="25sp"
        android:layout_above="@+id/editText9"
        android:layout_alignLeft="@+id/editText9"
        android:layout_alignStart="@+id/editText9" />

    <EditText
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:inputType="textPersonName"
        android:textColorHint="#a0a0a1"
        android:background="#ffffff"
        android:hint="username"
        android:ems="10"
        android:textSize="25sp"
        android:id="@+id/editText7"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/editText8"
        android:layout_alignLeft="@+id/editText8"
        android:layout_alignStart="@+id/editText8" />

    <EditText
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:textColorHint="#a0a0a1"
        android:textAlignment="center"
        android:ellipsize="start"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:background="#ffffff"
        android:textSize="25sp"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/editText7"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7" />

    <TextView
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d4d4d3"
        android:textSize="39sp"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:text="Register"
        android:background="#4efcfeff"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginBottom="108dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
